@model LicenseNedroMVC.Models.License

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Основная информация</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Номер лицензии:</dt>
                        <dd class="col-sm-8">@Model.LicenseNumber</dd>
                        
                        <dt class="col-sm-4">Статус:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Действующая" ? "bg-success" : "bg-warning")">
                                @Model.Status
                            </span>
                        </dd>
                        
                        <dt class="col-sm-4">Срок действия:</dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()
                        </dd>
                        
                        <dt class="col-sm-4">Местоположение:</dt>
                        <dd class="col-sm-8">@Model.Location</dd>
                        
                        <dt class="col-sm-4">Тип ископаемого:</dt>
                        <dd class="col-sm-8">@Model.MineralType</dd>
                    </dl>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Технические характеристики</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Запасы:</dt>
                        <dd class="col-sm-8">@Model.Reserves</dd>
                        
                        <dt class="col-sm-4">Площадь:</dt>
                        <dd class="col-sm-8">@Model.Area</dd>
                    </dl>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Описание</h5>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Оставить заявку</h5>
                </div>
            </div>
        </div>
    </div>
</div>